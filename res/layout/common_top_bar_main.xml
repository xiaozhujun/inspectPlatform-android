<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/common_topbar_high"
    android:background="@drawable/common_top_layer_without_projection_bg"
    android:clickable="true"
    android:gravity="center_vertical"
    android:minHeight="@dimen/common_topbar_high" >

    <RelativeLayout
        android:id="@+id/tv_topbar_left_map_layout"
        android:layout_width="@dimen/common_main_left_location_text_width"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/common_text_left_selector"
        android:clickable="false" >

        <TextView
            android:id="@+id/iv_topbar_location"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:drawableLeft="@drawable/location"
            android:drawableRight="@drawable/common_divider_line"
            android:gravity="center"            
            android:textAppearance="@style/CommonTopBarRightImageText" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tv_topbar_right_map_layout"
        android:layout_width="@dimen/common_right_image_text_width"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/common_text_btn_selector"
        android:clickable="true" >

        <TextView
            android:id="@+id/tv_topbar_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:drawableLeft="@drawable/people"
            android:gravity="center"
            android:textAppearance="@style/CommonTopBarRightImageText" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_topbar_middle_detail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_topbar_right_map_layout"
        android:layout_toRightOf="@+id/tv_topbar_left_map_layout"
        android:gravity="center"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:singleLine="true"
        android:text="@string/main_title"
        android:textAppearance="@style/CommonTopBarMiddleText" />

</RelativeLayout>